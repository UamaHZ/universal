<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Matisse.Mine" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">@color/dracula_primary_dark</item>
        <item name="toolbar">@style/Toolbar.Uama</item>
        <item name="album.dropdown.title.color">#333333</item>
        <item name="album.dropdown.count.color">#333333</item>
        <item name="album.element.color">#333333</item>
        <item name="album.thumbnail.placeholder">#ffffff</item>
        <item name="album.emptyView">@drawable/ic_empty_dracula</item>
        <item name="album.emptyView.textColor">@color/dracula_album_empty_view</item>
        <item name="item.placeholder">@color/dracula_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">#ffad01</item>
        <item name="item.checkCircle.borderColor">@color/dracula_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/dracula_page_bg</item>
        <item name="bottomToolbar.bg">#ffffff</item>
        <item name="bottomToolbar.preview.textColor">#333333</item>
        <item name="bottomToolbar.apply.textColor">#333333</item>
        <item name="preview.bottomToolbar.back.textColor">@color/dracula_preview_bottom_toolbar_back_text</item>
        <item name="preview.bottomToolbar.apply.textColor">#ffffff</item>
        <item name="listPopupWindowStyle">@style/Popup.Mine</item>
        <item name="capture.textColor">@color/dracula_capture</item>
    </style>

    <style name="Popup.Mine" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">#ffffff</item>
    </style>

</resources>
